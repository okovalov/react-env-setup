{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "extends": [
    "eslint:recommended",
    "airbnb"
  ],
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.5"
    }
  },
  "rules": {
    "import/extensions": [
      {
        "jsx": "always"
      }
    ]
  }
}